<footer class="footer section-{{ section.id }} px-0 mx-0 my-section container-fluid d-flex flex-wrap bg-footer text-white">
  <div class="page-width  row w-100 padding-bottom-footer">
	
    	{% if section.settings.logo %}
      <div  data-aos="fade-up" class="col-md-4 order-1 col-12 f-center">
          <div class="row justify-content-center">
              <div class="my-logo"> </div>
          </div>
          
          <div class="row justify-content-center">
            {% for block in section.blocks %}
              {% if block.type == "social_links" %}
              <a class="px-2" href="{{block.settings.url}}" target="_blank">
                  <i class="fa fas {{block.settings.icon}}"></i>
              </a>
            {% endif %}
          {% endfor %}
          </div>

      </div>
    {% endif %}
    
    
    
    
     <div data-aos-delay="100" data-aos="fade-up" class="col-md-4  order-md-2 order-3 col-12 container-more-footer pt-3 d-flex justify-content-center">
          <div class="container-menu-footer">
              <h2 class="text-md-left text-center">More Information</h2>
              <ul>
                {% for block in section.blocks %}
                  {% if block.type == 'more_information' %}
                  <li class="d-flex pr-md-5 pt-3 justify-content-center justify-content-md-start  align-items-center">
                    
                    <a {% if block.settings.new_tab %} target="_blank" {% endif %} href="{{ block.settings.url }}">
                     <span> <i class="fas fa {{ block.settings.icon }}"></i>{{ block.settings.label }}</span>
                    </a>
                  </li>
                {% endif %}
              {% endfor %}
              </ul>
          </div>
      </div>

 
	
    
         {% for block in section.blocks %}
        {% if block.type == 'quick_links' %}
      <div data-aos-delay="150" data-aos="fade-up" class="col-md-4 col-12 order-2 container-quick-links d-flex justify-content-md-end justify-content-center">
          <div class="container-menu-footer pt-3 page-width p-0 ">
              <h2 class="text-md-left text-center">{{block.settings.heading}}</h2>
              <ul class="quick-links list" id="quick-links">
                
              {% for link in linklists[block.settings.menu].links %}
                    <li class="d-flex pr-md-5 pt-3 justify-content-center justify-content-md-start  align-items-center">
                        <a href="{{link.url}}">{{link.title}}</a>
                    </li>
              {% endfor %}
            </ul>
          </div>
      </div>
        {% endif %}
      {% endfor %}
     

  </div>
  <div class="copyright row m-0 justify-content-around align-items-center ">
      <span>Copyright Â© 2022 All rights reserved | This Website Was Designed And Developed by</span>
      <a href="https://josesilvera.com/" target="_blank"> <img class="logoSilvera" alt="author page logo"
              src="{{ "silvera.png" | asset_url }}"></a>
  </div>
</footer>

{% schema %}
{
	"name": "t:sections.footer.name",
	"blocks": [{
			"type": "quick_links",
			"name": "Quick Links",
			"limit": 1,
			"settings": [{
					"type": "text",
					"id": "heading",
					"default": "Quick links",
					"label": "t:sections.footer.blocks.link_list.settings.heading.label",
					"info": "t:sections.footer.blocks.link_list.settings.heading.info"
				},
				{
					"type": "link_list",
					"id": "menu",
					"default": "footer",
					"label": "t:sections.footer.blocks.link_list.settings.menu.label",
					"info": "t:sections.footer.blocks.link_list.settings.menu.info"
				}
			]
		},
		{
			"type": "more_information",
			"name": "More Information",
			"limit": 4,
			"settings": [{
					"type": "url",
					"id": "url",
					"label": "Link"
				},
				{
					"type": "text",
					"id": "label",
					"label": "label"
				},
				{
					"type": "text",
					"id": "icon",
					"label": " Font Awesome Icon"
				},
        {
          "type": "checkbox",
          "id": "new_tab",
          "label": "Open in new tab",
          "default": true
        }
			]
		},
		{
			"type": "social_links",
			"name": "Social Links",
			"limit": 5,
			"settings": [{
					"type": "text",
					"id": "icon",
					"label": " Font Awesome Icon"
				},
				{
					"type": "url",
					"id": "url",
					"label": "Link"
				}
			]
		}
	],
	"settings": [{
			"type": "image_picker",
			"id": "logo",
			"label": "select your logo"

		},
		{
			"type": "color_background",
			"id": "background_color",
			"label": "Background Footer",
			"default": "linear-gradient(89.71deg, #383838 23.22%, #575757 92.95%)"
		},
		{
			"type": "range",
			"id": "radius_border",
			"min": 0,
			"max": 100,
			"step": 1,
			"unit": "px",
			"label": "Border Radius",
			"default": 64
		},
		{
			"type": "header",
			"content": "t:sections.all.spacing"
		},
		{
			"type": "range",
			"id": "margin_top",
			"min": 0,
			"max": 100,
			"step": 4,
			"unit": "px",
			"label": "t:sections.footer.settings.margin_top.label",
			"default": 0
		},
		{
			"type": "header",
			"content": "t:sections.all.padding.section_padding_heading"
		},
		{
			"type": "range",
			"id": "padding_top",
			"min": 0,
			"max": 100,
			"step": 4,
			"unit": "px",
			"label": "t:sections.all.padding.padding_top",
			"default": 36
		},
		{
			"type": "range",
			"id": "padding_bottom",
			"min": 0,
			"max": 100,
			"step": 4,
			"unit": "px",
			"label": "t:sections.all.padding.padding_bottom",
			"default": 36
		},
		{
			"type": "header",
			"content": "Logo Size"
		},
		{
			"type": "range",
			"id": "logo_width",
			"min": 50,
			"max": 250,
			"step": 10,
			"default": 100,
			"unit": "t:sections.header.settings.logo_width.unit",
			"label": "Logo Width"
		},
		{
			"type": "range",
			"id": "logo_height",
			"min": 50,
			"max": 250,
			"step": 10,
			"default": 100,
			"unit": "t:sections.header.settings.logo_width.unit",
			"label": "Logo Height"
		},
		{
			"type": "header",
			"content": "Logo Size Mobile"
		},
		{
			"type": "range",
			"id": "logo_mobile_width",
			"min": 50,
			"max": 250,
			"step": 10,
			"default": 100,
			"unit": "t:sections.header.settings.logo_width.unit",
			"label": "Logo mobile Width"
		},
		{
			"type": "range",
			"id": "logo_mobile_height",
			"min": 50,
			"max": 250,
			"step": 10,
			"default": 100,
			"unit": "t:sections.header.settings.logo_width.unit",
			"label": "Logo mobile Height"
		}
	]
}
{% endschema %}
