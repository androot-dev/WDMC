    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    },
	{
		"type": "text",
		"id": "title-section",
		"label": "Title"
	},
	{
		"type": "image_picker",
		"id": "image",
		"label": "Select a Image"
	}
  ],
"blocks":[{
	"type":"benefit",
	"name": "Benefit",
	"settings": [
		 {

              "type": "text",
              "id": "title",
			  "label": "Description"
          },
		  {

              "type": "text",
              "id": "icon",
			  "label": "Font awesome icon",
			  "default": "fa-home"
          },
          {

              "type": "textarea",
              "id": "description",
			  "label": "Description"
          }
		]
},
{
			"type": "icon-background",
			"name": "Icon on background",
			"settings": [
				{
				"type" : "text",
				"id": "icon",
				"label": "Icon Fontawesome"
				},
				{
                  "type": "range",
                  "id": "top",
                  "min": 0,
                  "max": 100,
                  "step": 1,
                  "unit": "%",
                  "label": "Top Position",
                  "default": 40
                },
				{
                  "type": "range",
                  "id": "left",
                  "min": 0,
                  "max": 100,
                  "step": 1,
                  "unit": "%",
                  "label": "Left Position",
                  "default": 40
                },
				{
                  "type": "range",
                  "id": "size",
                  "min": 50,
                  "max": 500,
                  "step": 5,
                  "unit": "px",
                  "label": "Size",
                  "default": 100
                },
				{
					"type": "checkbox",
					"id": "hidden_mobile",
					"label": "Hidden in Mobile",
					"default": true
				}
			]
			
		}


],
  "presets": [
    {
      "name": "Custom Benefits"
    }
  ]
}
