        "label": "Position Image X",
		"options": [
      	{
          "value": "center",
          "label": "center"
        },
        {
          "value": "right",
          "label": "right"
        },
		{
          "value": "left",
          "label": "left"
        },
        {
          "value": "bottom",
          "label": "bottom"
        },
		{
          "value": "top",
          "label": "top"
        }
      ]
    },
	{
        "id": "image_position_y",
        "type": "select",
        "label": "Position Image Y",
		"options": [
      	{
          "value": "center",
          "label": "center"
        },
        {
          "value": "right",
          "label": "right"
        },
		{
          "value": "left",
          "label": "left"
        },
        {
          "value": "bottom",
          "label": "bottom"
        },
		{
          "value": "top",
          "label": "top"
        }
      ]
    },
    {
      "type": "header",
      "content": "Custom Colors"
    },
    {
        "id": "background-color",
        "type": "color",
        "label": "Background Color"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
